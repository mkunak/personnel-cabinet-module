{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2020": true,
    "node": true
  },
  "extends": [
    "airbnb-base",
    "prettier",
    "prettier/standard",
    "plugin:prettier/recommended"
  ],
  "plugins": ["prettier"],
  "parserOptions": {
    "ecmaVersion": 11
  },
  "rules": {
    "object-curly-newline": ["error", { "consistent": true }],
    "prettier/prettier": "error",
    "no-console": "off",
    "quotes": ["error", "double"],
    "consistent-return": "off",
    "camelcase": "off",
    "no-underscore-dangle": "off",
    "max-len": [
      "error",
      {
        "code": 90,
        "ignoreUrls": true
      }
    ],
    "no-param-reassign": [
      "error",
      {
        "props": false
      }
    ]
  }
}
